<AskPresidentsLayout>:
    orientation: 'vertical'
    Label:
        text: "What would President Trump say?"
        font_size: 50
        text_size: self.size
        halign: 'center'
        valign: 'middle'
    BoxLayout:
        orientation: 'horizontal'
        AnchorLayout:
            TextInput:
                size_hint: (.5, None)
                height: 30
                multiline: False
                text: '%s, %s' % (self.get_center_x(), self.get_center_y())
    Button:
        text: 'Ask Now'
     #   on_release: root.get_quote
        on_release: root.choice('I am the best at everything')
    Label:
        id: result
        font_size: 40
        text: ''
    Button:
        text: 'Start Over'
        on_press: root.clear()